<Window x:Class="Glider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Button Content="Start" Name="StartButton" HorizontalAlignment="Left" Margin="5,0,0,5" VerticalAlignment="Bottom" Width="75" Click="OnStartClick"/>
        <TextBlock Text="Score:"  HorizontalAlignment="Left" Margin="100,0,0,5" VerticalAlignment="Bottom" IsHitTestVisible="False"/>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="160,0,0,5" Width="100">
            <TextBlock Name="ScoreCounter" Text="0"  HorizontalAlignment="Right"  Margin="0,0,0,0" VerticalAlignment="Bottom" IsHitTestVisible="False"/>
        </Grid>
        <Canvas Name="Map" HorizontalAlignment="Stretch" Margin="10,10,10,50" VerticalAlignment="Stretch" Background="Aqua"/>
        
        <TextBlock Text="Lives:"  HorizontalAlignment="Left" Margin="400,0,0,4.96" VerticalAlignment="Bottom" IsHitTestVisible="False"/>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="460,0,0,5" Width="100">
            <TextBlock x:Name="LivesCounter" Text="10"  HorizontalAlignment="Right"  Margin="0,0,0,0" VerticalAlignment="Bottom" IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</Window>
